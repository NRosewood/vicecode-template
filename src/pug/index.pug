	// BEGIN services

	.services
		.services__.container
			.services__block-head.block-head
				.block-head__body
					img.block-head__icon(src="/images/icons/icon-2.png" alt="")
			.services__block
				.services__title
					| Услуги и цены
				.services__desc
					| Выберите тип устройства
			
			.services__list
				.services__item
					.services__view
